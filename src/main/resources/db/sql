CREATE TABLE metoo_device_sys_info(
	id BIGINT NOT NULL AUTO_INCREMENT COMMENT '主键ID',
	addTime DATETIME COMMENT '添加时间',
	updateTime DATETIME COMMENT '更新时间',
	manufacturer VARCHAR(255) COMMENT '系统型号',
	model VARCHAR(255) COMMENT '系统型号',
	os VARCHAR(255) COMMENT '操作系统',
	PRIMARY KEY(id)
)ENGINE = InnoDB DEFAULT CHARSET = utf8mb4  COMMENT = '系统信息表';


CREATE TABLE metoo_risk_port_config (
    id INT PRIMARY KEY AUTO_INCREMENT,
    port_value VARCHAR(255) NOT NULL    -- 存储风险端口号
);


ALTER TABLE `metoo_unit`
ADD COLUMN `city_code` VARCHAR(12) DEFAULT NULL COMMENT '市级行政区划编码' AFTER `id`;
ALTER TABLE `metoo_unit`
ADD COLUMN `city_name` VARCHAR(100) DEFAULT NULL COMMENT '市级行政区划名称' AFTER `city_code`,
ADD COLUMN `county_code` VARCHAR(12) DEFAULT NULL COMMENT '区县级行政区划编码' AFTER `city_name`,
ADD COLUMN `county_name` VARCHAR(100) DEFAULT NULL COMMENT '区县级行政区划名称' AFTER `county_code`;
ALTER TABLE `metoo_unit` ADD COLUMN `unitId` VARCHAR(12) DEFAULT NULL COMMENT '关联单位id';